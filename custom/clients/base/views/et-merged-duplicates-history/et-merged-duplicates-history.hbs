<style>

    .et-loader {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -17.5px;
        margin-top: -17.5px;
        background-size: contain;
        height: 35px;
        width: 35px;
        animation: elastic-rotation 1.33s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;
        background-repeat: no-repeat;
        background-position: center center;
        background-image: url('modules/ET_DuplicateFinderProcess/images/eontek_logo_no_text_350x350.png');
    }

    @keyframes elastic-rotation {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

</style>

<div class="row-fluid">

    {{#if loading}}

        <div class="span12">
            <div class="text-center">
                <br>
                <span class="et-loader"></span>
                <br>
            </div>
        </div>

    {{else}}

        {{#if no_duplicates}}

            <div class="span12" style="padding: 10px; font-style: italic; min-height: 77px;">
                {{no_duplicates_message}}
            </div>

        {{else}}

            <div class="span12">

                <table class="table table-striped" style="margin-bottom: 0">

                    <thead>
                    <tr>
                        <th style="width: 35%;">{{str 'LBL_MERGED_AT_DATETIME' 'ET_MergedDuplicates'}}</th>
                        <th style="width: 43%;">{{str 'LBL_MERGED_DUPLICATE_NAME' 'ET_MergedDuplicates'}}</th>
                        <th style="width: 22%; text-align: center;"></th>
                    </tr>
                    </thead>
                    <tbody>

                    {{#each duplicates_data}}

                        <tr>
                            <td style="padding-top: 11px;">{{this.merged_at}}</td>
                            <td style="padding-top: 11px;">{{this.name}}</td>
                            <td style="text-align: center;">
                                <a href="#" id="{{this.id}}" class="btn btn-mini et-preview-duplicate">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    {{str 'LBL_PREVIEW_DUPLICATE_BTN' 'ET_MergedDuplicates'}}
                                </a>
                            </td>
                        </tr>

                    {{/each}}
                    </tbody>
                </table>
            </div>

        {{/if}}

    {{/if}}
</div>

{{#unless loading}}

    <!--footer-->
    <div class="row-fluid" style="border-top: 1px solid #E9E9E9">

        <div class="span12">

            <a href="https://eontek.co" target="_blank" class="pull-right" style="padding-right: 11px">
                <img src="modules/ET_DuplicateFinderProcess/images/eontek_logo_text_150x30.png"
                     alt="Eontek"
                     style="padding-top: 7px; height: 14px">
            </a>

        </div>
    </div>

{{/unless}}

